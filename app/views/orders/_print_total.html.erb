<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr class="bg-primary center">
      <th scope="col" class="center">Team</th>
      <th scope="col" class="center">Shirt Color</th>
      <th scope="col" class="center">Ink Color</th>
      <th scope="col" class="center">Quantity</th>
    </tr>
  </thead>
  <tbody>
    <% @line_items.each do |li| %>
      <tr>
        <td scope="row" class="center"><%= li[0][0] %></td>
        <td scope="row" class="center"><%= li[0][1] %></td>
        <td scope="row" class="center"><%= li[0][2] %></td>
        <td scope="row" class="center"><%= li[1] %></td>
      </tr>
    <% end %>
  </tbody>
</table>
