<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr class="bg-primary center">
      <th scope="col" class="center">League</th>
      <th scope="col" class="center">Team</th>
      <th scope="col" class="center">Division</th>
      <th scope="col" class="center">Shirt Color</th>
      <th scope="col" class="center">Ink Color</th>
      <th scope="col" class="center">Size</th>
      <th scope="col" class="center">Quantity</th>
      <% if current_user.role == 'admin' %>
        <th scope="col" class="center">Edit</th>
        <th scope="col" class="center">Delete</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% for line_item in @order.line_items %>
      <tr>
        <td scope="row" class="center"><%= line_item.league %></td>
        <td scope="row" class="center"><%= line_item.team %></td>
        <td scope="row" class="center"><%= line_item.division %></td>
        <td scope="row" class="center"><%= line_item.shirtcolor %></td>
        <td scope="row" class="center"><%= line_item.inkcolor %></td>
        <td scope="row" class="center"><%= line_item.shirtsize %></td>
        <td scope="row" class="center"><%= line_item.shirt_quantity %></td>
        <% if current_user.role == 'admin' %>
          <td scope="row" class="center">
            <%= link_to edit_line_item_path(line_item) do %>
              <i class="fas fa-pen-square fa-2x"></i>
            <% end %>
            </td>
          <td scope="row" class="center">
            <%= link_to line_item_path(line_item), data: {:confirm => 'Are you sure?'}, :method => :delete do %>
              <i class="fas fa-trash fa-2x"></i>
            <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>