<% if @order.line_items.exists? %>
  <p>
    <strong>Status:</strong>
    <%= @order.status %>
  </p>

  <p>
    <strong>Date:</strong>
    <%= @order.date %>
  </p>

  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr class="bg-info">
        <th scope="col">League</th>
        <th scope="col">Team</th>
        <th scope="col">Division</th>
        <th scope="col">Shirt Color</th>
        <th scope="col">Ink Color</th>
        <th scope="col">Size</th>
        <th scope="col">Quantity</th>
      </tr>
    </thead>
    <tbody>
      <% for line_item in @order.line_items %>
      <tr>
        <td scope="row"><%= line_item.league.upcase %></td>
        <td scope="row"><%= line_item.team.upcase %></td>
        <td scope="row"><%= line_item.division.upcase %></td>
        <td scope="row"><%= line_item.shirtcolor.upcase %></td>
        <td scope="row"><%= line_item.inkcolor.upcase %></td>
        <td scope="row"><%= line_item.shirtsize.upcase %></td>
        <td scope="row"><%= line_item.quantity %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
Upload spreadsheet
</br>
  <a href="google.com">example spreadsheet link</a>
  </br>

  <a href='http://localhost:3000/line_items/new?order_value=<%= @order.id %>', class="btn btn-primary btn-lg">
    Continue
  </a>

<% end %>

