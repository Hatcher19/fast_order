<% if @order.line_items.exists? %>
  <p>
    <strong>Status:</strong>
    <%= @order.status %>
  </p>

  <p>
    <strong>Date:</strong>
    <%= @order.date %>
  </p>
  <h4><%= @order.line_items.count %></h4>
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr class="bg-info">
        <th scope="col">League</th>
        <th scope="col">Team</th>
        <th scope="col">Division</th>
        <th scope="col">Shirt Color</th>
        <th scope="col">Ink Color</th>
        <th scope="col">Size</th>
        <th scope="col">Quantity</th>
      </tr>
    </thead>
    <tbody>
      <% for line_item in @order.line_items %>
      <tr>
        <td scope="row"><%= line_item.league %></td>
        <td scope="row"><%= line_item.team %></td>
        <td scope="row"><%= line_item.division %></td>
        <td scope="row"><%= line_item.shirtcolor %></td>
        <td scope="row"><%= line_item.inkcolor %></td>
        <td scope="row"><%= line_item.shirtsize %></td>
        <td scope="row"><%= line_item.quantity %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
Upload spreadsheet
<h2>Import Products</h2>
<%= form_tag import_line_items_path, multipart: true do %>
  <%= hidden_field_tag :order_id, params[:id] %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import" %>
<% end %>


<% end %>

