<% if @order.line_items.exists? %>
  <div class="row">
    <div class="col-sm-4">
      <h6><%= @order.address.contact_name  %></h6>
      <h6><%= @order.address.street  %></h6>
      <h6><%= @order.address.unit  %></h6>
      <h6><%= @order.address.city  %>, <%= @order.address.state  %> <%= @order.address.zipcode  %></h6>
      <%= @order.user.email %>
      <%= @order.tracking %>
      <%= @order.ship_vendor %>
      <br><%= link_to 'spreadsheet', @order.spreadsheet_link %>
    </div>
    <div class="col-sm-4">
    </div>
    <div class="col-sm-4">
      <% if can? :update, Order %>
        <%= link_to 'Edit Order', edit_order_path(@order), class: 'btn btn-lg btn-block btn-success' %>
      <% end %>
    </div>
  </div>
  <div class="row order-highlight">
    <div class="col-sm-3">
      <div class="card">
        <div class="card-header bg-primary center">
          <h4>Order #</h4>
        </div>
        <div class="card-body">
          <p class="card-text">
            <h1 class="center"><%= @order.id %></h1>
          </p>
        </div>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="card">
        <div class="card-header bg-primary center">
          <h4>Status</h4>
        </div>
        <div class="card-body">
          <p class="card-text">
            <h1 class="center"><%= @order.status.upcase %></h1>
          </p>
        </div>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="card">
        <div class="card-header bg-primary center">
          <h4>Due Date</h4>
        </div>
        <div class="card-body">
          <p class="card-text">
            <h1 class="center"><%= @order.date %></h1>
          </p>
        </div>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="card">
        <div class="card-header bg-primary center">
          <h4>Shirt Count</h4>
        </div>
        <div class="card-body">
          <p class="card-text">
            <h1 class="center"><%= @order.line_items.sum(:shirt_quantity) %></h1>
          </p>
        </div>
      </div>
    </div>
  </div>
  <div class="card text-center">
    <div class="card-header">
      <ul class="nav nav-tabs card-header-tabs">
        <li class="nav-item">
          <a class="nav-link active" data-toggle="collapse" href="#overview" role="button" aria-expanded="false" aria-controls="overview">Overview</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" data-toggle="collapse" href="#printTotal" role="button" aria-expanded="false" aria-controls="printTotal">Print Total</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" data-toggle="collapse" href="#productTotals" role="button" aria-expanded="false" aria-controls="productTotals">Product Total</a>
        </li>
      </ul>
    </div>
    <div class="card-body collapse in" id="overview">
      <%= render 'overview' %>
    </div>
    <div class="card-body collapse" id="printTotal">
      <%= render 'print_total' %>
    </div>
    <div class="card-body collapse" id="productTotals">
      <%= render 'order_sheet' %>
    </div>
  </div>
</div>
<% else %>
  <div class="jumbotron">
    <% if current_user.role == "operator" %>
      <p class="center">Your order is currently processing. You should see approval for your order in 12 - 24 business hours.</p>
      <div class="progress">
        <div class="progress-bar progress-bar-striped progress-bar-animated active" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 100%"></div>
      </div>
    <% elsif current_user.role == "admin" %>
      <p class="center">Operators original spreadsheet:<br><a href="<%= @order.spreadsheet_link %>" target="_blank"><%= @order.spreadsheet_link %></a></p>
      <br><br><br>
      <%= form_tag import_line_items_path, multipart: true, class: 'center' do %>
        <%= hidden_field_tag :order_id, params[:id] %>
        <%= file_field_tag :file, style: 'margin: auto', class: 'btn btn-default btn-lg' %>
        <br>
        <%= submit_tag "Import Spreadsheet", class: 'btn btn-primary btn-lg' %>
      <% end %>
    <% end %>  
  </div>
<% end %>








