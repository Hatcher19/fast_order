<p id="notice"><%= notice %></p>

<h1>Line Items</h1>

<table>
  <thead>
    <tr>
      <th>League</th>
      <th>Team</th>
      <th>Division</th>
      <th>Shirtcolor</th>
      <th>Inkcolor</th>
      <th>Shirtsize</th>
      <th>Quantity</th>
      <th>User</th>
      <th>Order</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @line_items.each do |line_item| %>
      <tr>
        <td><%= line_item.league %></td>
        <td><%= line_item.team %></td>
        <td><%= line_item.division %></td>
        <td><%= line_item.shirtcolor %></td>
        <td><%= line_item.inkcolor %></td>
        <td><%= line_item.shirtsize %></td>
        <td><%= line_item.shirt_quantity %></td>
        <td><%= line_item.user_id %></td>
        <td><%= line_item.order_id %></td>
        <td><%= link_to 'Show', line_item %></td>
        <td><%= link_to 'Edit', edit_line_item_path(line_item) %></td>
        <td><%= link_to 'Destroy', line_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Line Item', new_line_item_path %>
