<p id="notice"><%= notice %></p>
Total: <%= @sum  %><br>
<div class="card">
  <div class="card-body">
    <div class="card-title bg-primary center"><h3>% of Color</h3></div>
    <%= render 'color_percentage' %>
  </div>
<div class="card">
  <div class="card-body">
    <div class="card-title bg-primary center"><h3>% of Size</h3></div>
    <%= render 'size_percentage' %>
  </div>
</div>
<table class="table table-striped table-bordered table-hover">
	<tr>
		<th>order #</th>
		<th>Delete</th>
	</tr>
	<% @line_items.order("created_at DESC").each do |li| %>
		<tr>
			<td><%= li.order_id %></td>
			<td scope="row" class="center">
	            <%= link_to line_item_path(li), data: {:confirm => 'Are you sure?'}, :method => :delete do %>
	              <i class="fas fa-trash fa-2x"></i>
	            <% end %>
	        </td>
		</tr>
	<% end %>
</table>
